<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.fauzanrifqy.funfacts.FunFactsActivity"

    android:id="@+id/realativeLayout"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39add1"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_ask_fact"
        android:layout_marginTop="24dp"
        android:textColor="#99ffffff"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/factTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_fact"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/showFact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_show_fact"
        android:layout_alignParentBottom="true"
        android:textColor="#39add1"/>

</RelativeLayout>
